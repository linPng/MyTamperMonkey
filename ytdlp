            trustedPolicy = window.trustedTypes.createPolicy('youtube-downloader', {
                createHTML: (string) => string,
                createScript: (string) => string,
                createScriptURL: (string) => string
            });
        }
    } catch (e) {
        console.log('Trusted Types 策略创建失败，使用备用方案');
    }

